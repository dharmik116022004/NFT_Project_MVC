@model nft_marketplace.Models.contact

@{
    ViewData["Title"] = "Contact";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Contact</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="style.css" />
    <style>
        body {
            background-color: #161625;
            color: white;
        }

        .card {
            background-color: #2c2c40;
            border-radius: 10px;
            padding: 20px;
            margin-top: 20px;
        }

        .form-control {
            background-color: #11121d;
            border: none;
            color: white;
            margin-bottom: 20px;
            transition: background-color 0.3s, color 0.3s; /* Add transition effect */
        }

            .form-control::placeholder {
                color: white;
            }

            .form-control:focus {
                background-color: #11121d;
                color: white;
            }

        .btn-primary {
            background-color: #4d4dff;
            border: none;
            padding: 10px 20px;
        }

            .btn-primary:hover {
                background-color: #3c3cff;
            }
    </style>
</head>
<body>

    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card">
                    <h3 class="text-center mb-4" style="color: white">Drop a Message</h3>
                    <form asp-controller="HomeController1" asp-action="Contact" method="post">
                        <div class="mb-3">
                            <input asp-for="Name" type="text" class="form-control" placeholder="Enter your Name">
                        </div>
                        <div class="mb-3">
                            <input asp-for="Email" type="email" class="form-control" placeholder="Enter your Email">
                        </div>
                        <div class="mb-3">
                            <input asp-for="Subject" type="text" class="form-control" placeholder="Enter Subject">
                        </div>
                        <div class="mb-3">
                            <textarea asp-for="Message" class="form-control" placeholder="Write Message" rows="5"></textarea>
                        </div>
                        <button type="submit" class="btn btn-primary btn-block">Send Message</button>
                    </form>
                </div>
            </div>

        </div>
    </div>

    <div class="container address">
        <div class="row add-row">
            <div class="col-sm-6">
                <h2 class="text-white">Our Address</h2>
                <div class="text-white">
                    <p>RK University</p>
                    <p>Rajkot</p>
                    <p>Gujarat - 361020</p>
                </div>
            </div>
            <div class="col-sm-6 map-padd">
                <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3889.019213593812!2d77.62060731482127!3d12.906485990898592!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x3bae14eed2a26dbb%3A0x98f64960052a26b0!2sTrainingMug!5e0!3m2!1sen!2sin!4v1504259922701" width="100%" frameborder="0" style="border:0" allowfullscreen></iframe>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
