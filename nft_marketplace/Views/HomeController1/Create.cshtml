@model nft_marketplace.Models.createBid

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Create</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background-color: #161625;
            color: white;
        }

        .card {
            background-color: #2c2c40;
            border-radius: 10px;
            padding: 5px;
            margin-bottom: 10px;
        }

        .btn-purple {
            background-color: #4d4dff;
            border: none;
        }

            .btn-purple:hover {
                background-color: #3c3cff;
            }
        /* Custom styles for form fields */
        .form-control {
            border-color: white;
            background-color: #11121d; /* Set background color */
            color: white;
        }

            .form-control::placeholder {
                color: white; /* Set placeholder text color */
            }

            .form-control:focus {
                border-color: white;
                background-color: #11121d;
                color: white;
            }

        textarea.form-control {
            min-height: 100px; /* Set min-height for textarea */
        }
    </style>
</head>
<body>
    <div class="container" style="height: 500px; width: 1000px;">
        <div class="row justify-content-center">
            <div class="col-md-3">
                <div class="card text-center">
                    <img src="~/css/img-01.jpg" class="card-img-top" alt="...">
                    <div class="card-body p-1">
                        <h6 class="card-title fs-6" style="color: white;">Cartoon Character</h6>
                        <p class="card-text fs-7" style="color: white;">Created by Hitesh Bhakta</p>
                        <p class="card-text fs-7" style="color: white;">Current Bid: 7.89 ETH</p>

                        <a href="#" class="btn btn-purple btn-sm mb-2" style=" color: white">Place Bid</a>
                        <a href="#" class="btn btn-outline-primary btn-sm mb-2">View History</a>
                    </div>
                </div>
            </div>
            <div class="col-md-9">
                <form asp-action="Create" method="post">
                    <div class="mb-3">
                        <label for="price" class="form-label fs-7">Price</label>
                        <input asp-for="price" type="text" class="form-control form-control-sm" id="price" placeholder="Enter Price">
                    </div>
                    <div class="mb-3">
                        <label for="minBid" class="form-label fs-7">Minimum Bid</label>
                        <input asp-for="minBid" type="text" class="form-control form-control-sm" id="minBid" placeholder="Enter Minimum Bid">
                    </div>
                    <div class="row mb-3">
                        <div class="col">
                            <label for="startingDate" class="form-label fs-7">Starting Date</label>
                            <input asp-for="startDate" type="date" class="form-control form-control-sm" id="startingDate" placeholder="dd/mm/yyyy">
                        </div>
                        <div class="col">
                            <label for="expirationDate" class="form-label fs-7">Expiration Date</label>
                            <input asp-for="expDate" type="date" class="form-control form-control-sm" id="expirationDate" placeholder="dd/mm/yyyy">
                        </div>
                    </div>
                    <div class="mb-3">
                        <label for="title" class="form-label fs-7">Title</label>
                        <input asp-for="title" type="text" class="form-control form-control-sm" id="title" placeholder="Enter Title">
                    </div>
                    <div class="mb-3">
                        <label for="description" class="form-label fs-7">Description</label>
                        <textarea asp-for="description" class="form-control form-control-sm" id="description" rows="3" placeholder="Enter Description"></textarea>
                    </div>
                    <button type="submit" class="btn btn-purple btn-sm">Submit</button>
                </form>
            </div>
        </div>
    </div>
</body>
</html>
