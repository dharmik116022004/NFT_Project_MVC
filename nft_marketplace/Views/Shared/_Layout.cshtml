<!DOCTYPE html>
<html lang="en">
<head>
	<!-- Your CSS styles here -->
	<style>
        body {
            background-color: #000000;
        }
        .newsletter-input {
            border-radius: 20px;
            border: none;
            padding: 10px 20px;
            width: 100%;
            max-width: 400px;
        }

        .social-icons img {
            margin-right: 5px;
        }

        .logo-section img {
            height: 80px;
            width: 180px;
        }

        .footer-text {
            font-size: 0.9rem;
            line-height: 1.5;
        }

        .bg-dark {
            --bs-bg-opacity: 1;
            background-color: #000;
        }

        li {
            line-height: 42px;
        }

        ul {
            position: relative;
            top: 23px;
        }
		.rounded-button {
			display: inline-block;
			padding: 10px 20px;
			border-radius: 20px;
			background-color: rgba(20, 20, 31, 1);
			border: 2px solid rgba(29, 0, 144, 1);
			color: white;
			text-decoration: none;
			text-align: center;
			transition: all 0.3s ease;
		}

		.rounded-button:hover {
				background-color: rgba(29, 0, 144, 1);
				color: rgba(20, 20, 31, 1);
</style>
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<title>@ViewData["Title"] - nft_marketplace</title>
		<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
		<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
		<link rel="stylesheet" href="~/nft_marketplace.styles.css" asp-append-version="true" />
		<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">

</head>
<body style="background-color: rgba(17, 18, 29, 1)">
	<header>
		<!-- Your header content here -->
		<nav class="navbar navbar-expand-sm navbar-toggleable-sm  box-shadow mb-3" style="background-color:rgba(20, 20, 31, 1);padding: 20px 0;">
			<img src="~/css/logo2.jpg" width="90" height="80">
			<div class="container-fluid">

				<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
					<span class="navbar-toggler-icon"></span>
				</button>
				<div class="collapse navbar-collapse justify-content-center" id="navbarSupportedContent">
					<ul class="navbar-nav">
						<li class="nav-item">
							<a class="nav-link active" aria-current="page" asp-action="Home2" style="color:white; font-weight: bold; font-size: 18px;">Home</a>
						</li>
						<li class="nav-item">
							<a class="nav-link" asp-action="Market" style="color:white; font-weight: bold; font-size: 18px;">Market</a>
						</li>
						<li class="nav-item">
							<a class="nav-link" asp-action="Create" style="color:white; font-weight: bold; font-size: 18px;">Create</a>
						</li>
						<li class="nav-item">
							<a class="nav-link" asp-action="Contact" style="color:white; font-weight: bold; font-size: 18px;">Contact</a>
						</li>

					</ul>
				</div>
				<ul class="navbar-nav"><a asp-action="Wallet">
					<button class="rounded-button" style="color:white; font-weight: bold; font-size: 18px;">Connect Wallet</button>
					</a>
				</ul>
			</div>
		</nav>
	</header>

	<div class="container-fluid">
		@RenderBody()
	</div>

	<!--footer-->
    <footer class="text-white py-5" style="background-color: #000; width:100%">
        <div class="container">
            <div class="row mb-4">
                <div class="col-md-2">
                    <div class="logo-section">
                        <img src="/images/logo.png" alt="NFTs Logo" style="position: relative;right: 50px;bottom: 16px;">
                        <p class="mt-3 footer-text" style="word-spacing: 9px;
                    line-height: 42.5px;
                    position: relative;
                    right: 90px;
                    bottom: 25px;
                    width: 300px;
                    height: 127px;
                    text-align: left;
                    font-size: 14px;
                    font-weight: bold;">The world’s first and largest digital marketplace for crypto collectibles and non-fungible tokens (NFTs). Buy, sell, and discover exclusive digital items.</p>
                    </div>
                </div>
                <div class="col-md-2" style="position: relative; left:50px">
                    <h5 class="mb-4">My Account</h5>
                    <ul class="list-unstyled mb-4">
                        <li><a href="#" class="text-white text-decoration-none">Author Profile</a></li>
                        <li><a href="#" class="text-white text-decoration-none">Create Item</a></li>
                        <li><a href="#" class="text-white text-decoration-none">Collection</a></li>
                        <li><a href="#" class="text-white text-decoration-none">Edit Profile</a></li>
                    </ul>
                </div>
                <div class="col-md-2" style="position: relative; left:50px">
                    <h5 class="mb-4">Resources</h5>
                    <ul class="list-unstyled mb-4">
                        <li><a href="#" class="text-white text-decoration-none">Help center</a></li>
                        <li><a href="#" class="text-white text-decoration-none">Partner</a></li>
                        <li><a href="#" class="text-white text-decoration-none">Community</a></li>
                        <li><a href="#" class="text-white text-decoration-none">Activity</a></li>
                    </ul>
                </div>
                <div class="col-md-2" style="position: relative; left:50px">
                    <h5 class="mb-4">Company</h5>
                    <ul class="list-unstyled mb-4">
                        <li><a href="#" class="text-white text-decoration-none">About</a></li>
                        <li><a href="#" class="text-white text-decoration-none">Career</a></li>
                        <li><a href="#" class="text-white text-decoration-none">Ranking</a></li>
                        <li><a href="#" class="text-white text-decoration-none">Contact Us</a></li>
                    </ul>
                </div>
                <div class="col-md-4" style="position: relative; left:50px">
                    <h5 class="mb-4">Newsletter</h5>
                    <form>
                        <div class="input-group mb-3" style="position: relative;top: 25px;">
                            <input type="email" class="form-control newsletter-input" placeholder="Email">
                        </div>
                    </form>
                    <div class="social-icons" style="position: relative;top: 20px; left : 10px;">
                        <a href="#"><img src="images/facebook-icon.png" alt="Facebook" height="30"></a>
                        <a href="#"><img src="images/instagram-icon.png" alt="Instagram" height="30"></a>
                        <a href="#"><img src="images/twitter-icon.png" alt="Twitter" height="30"></a>
                        <a href="#"><img src="images/telegram-icon.png" alt="Telegram" height="30"></a>
                        <a href="#"><img src="images/discord-icon.png" alt="Discord" height="30"></a>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col text-center" style="position: relative; top:16px;">
                    <p class="text-white">Copyrights 2024. Developed by Hitesh Bhakta. All Rights Reserved.</p>
                </div>
            </div>
        </div>
    </footer>

	<!-- Your JavaScript and libraries here -->
	<script src="~/lib/jquery/dist/jquery.min.js"></script>
	<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
	<script src="~/js/site.js" asp-append-version="true"></script>
	@await RenderSectionAsync("Scripts", required: false)
</body>
</html>
